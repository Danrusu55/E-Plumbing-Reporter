<h1>Report</h1>

<table>
  <tr>
    <th><%= sortable "date_of_call", "Date of Call" %></th>
    <th><%= sortable "caller_id", "Caller Id" %></th>
    <th><%= sortable "category", "Category" %></th>
    <th><%= sortable "city", "City" %></th>
    <th><%= sortable "zip", "Zip" %></th>
    <th><%= sortable "screen", "Screen" %></th>
    <th><%= sortable "post_screen", "Post Screen" %></th>
    <th><%= sortable "total_duration", "Total Duration" %></th>
    <th><%= sortable "disposition", "Disposition" %></th>
    <th><%= sortable "payout", "Payout" %></th>
  </tr>

  <% @reports.each do |report| %>
    <tr>
      <td><%= report.date_of_call %></td>
      <td><%= report.caller_id %></td>
      <td><%= report.category %></td>
      <td><%= report.city %></td>
      <td><%= report.zip %></td>
      <td><%= report.screen %></td>
      <td><%= report.post_screen %></td>
      <td><%= report.total_duration %></td>
      <td><%= report.disposition %></td>
      <td>$<%= report.payout %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @products %>
